<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    table,td,th {
        border: 1px solid black;
        border-collapse: collapse;
    }
    .btn-edit {
        text-decoration: none;
        background-color: chocolate;
        color: white;
        padding: 5px 10px;
        cursor: pointer;
        width: 50px;
        text-align: center;
    }
    .btn-delete {
        background-color: red;
        color: white;
        padding: 5px 10px;
        border: none;
        cursor: pointer;
        width: 60px;
    }
</style>
<body>
    <table style="width: 100%;">
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
        <% for (let i = 0 ; i < dataTable.length ; i++) { %>
        <tr>
            <td>
                <%= dataTable[i].email %>
            </td>
            <td>
                <%= dataTable[i].firstName %>
            </td>
            <td>
                <%= dataTable[i].lastName %>

            </td>
            <td>
                <%= dataTable[i].address %>
                </td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit">Edit</a>
                    <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete">Delete</a>
                </td>
        </tr>
       <% } %>
    </table>
</body>
</html>